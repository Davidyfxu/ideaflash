{
  "manifest_version": 3,
  "name": "IdeaFlash",
  "version": "1.0.0",
  "description": "Capture and organize your ideas instantly",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "entrypoints/popup/index.html",
    "default_icon": {
      "16": "public/icon/16.svg",
      "32": "public/icon/32.svg",
      "48": "public/icon/48.svg",
      "96": "public/icon/96.svg",
      "128": "public/icon/128.svg"
    }
  },
  "icons": {
    "16": "public/icon/16.svg",
    "32": "public/icon/32.svg",
    "48": "public/icon/48.svg",
    "96": "public/icon/96.svg",
    "128": "public/icon/128.svg"
  },
  "background": {
    "service_worker": "entrypoints/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["entrypoints/content.ts"]
    }
  ]
}
