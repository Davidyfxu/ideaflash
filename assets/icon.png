<svg width="512" height="512" viewBox="0 0 128 128" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <!-- Gradients -->
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#667eea;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#764ba2;stop-opacity:1" />
    </linearGradient>
    
    <linearGradient id="bulbGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffd89b;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#19547b;stop-opacity:1" />
    </linearGradient>
    
    <linearGradient id="sparkleGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffecd2;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#fcb69f;stop-opacity:1" />
    </linearGradient>
    
    <radialGradient id="glowGradient" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#fff;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#fff;stop-opacity:0" />
    </radialGradient>
  </defs>

  <!-- Background with gradient -->
  <circle cx="64" cy="64" r="60" fill="url(#bgGradient)" stroke="#4a5568" stroke-width="1.5"/>
  
  <!-- Glow effect -->
  <circle cx="64" cy="64" r="55" fill="url(#glowGradient)" opacity="0.3"/>

  <!-- Main light bulb (idea) -->
  <g transform="translate(64, 45)">
    <!-- Bulb glow -->
    <circle cx="0" cy="-8" r="25" fill="#fff" opacity="0.1"/>
    
    <!-- Bulb body with gradient -->
    <path d="M-18 0 C-18 -10 -10 -18 0 -18 S18 -10 18 0 C18 10 14 15 14 25 L-14 25 C-14 15 -18 10 -18 0Z"
          fill="url(#bulbGradient)" stroke="#e53e3e" stroke-width="1.5"/>
    
    <!-- Bulb highlight -->
    <ellipse cx="-4" cy="-8" rx="8" ry="12" fill="#fff" opacity="0.3"/>
    
    <!-- Bulb base -->
    <rect x="-12" y="25" width="24" height="10" rx="2" fill="#2d3748" stroke="#1a202c" stroke-width="1"/>
    <rect x="-10" y="27" width="20" height="6" fill="#4a5568"/>
    
    <!-- Base details -->
    <line x1="-8" y1="30" x2="8" y2="30" stroke="#1a202c" stroke-width="1"/>
    <line x1="-8" y1="32" x2="8" y2="32" stroke="#1a202c" stroke-width="1"/>
  </g>

  <!-- Sparkles around the bulb -->
  <g stroke="url(#sparkleGradient)" stroke-width="2" stroke-linecap="round" opacity="0.8">
    <!-- Top sparkle -->
    <g transform="translate(64, 20)">
      <line x1="0" y1="-8" x2="0" y2="-12"/>
      <line x1="-4" y1="-10" x2="4" y2="-10"/>
    </g>
    
    <!-- Right sparkle -->
    <g transform="translate(85, 45)">
      <line x1="-8" y1="0" x2="-12" y2="0"/>
      <line x1="-10" y1="-4" x2="-10" y2="4"/>
    </g>
    
    <!-- Left sparkle -->
    <g transform="translate(43, 45)">
      <line x1="8" y1="0" x2="12" y2="0"/>
      <line x1="10" y1="-4" x2="10" y2="4"/>
    </g>
  </g>

  <!-- Note/paper with modern design -->
  <g transform="translate(64, 85)">
    <!-- Paper shadow -->
    <rect x="-22" y="-10" width="44" height="28" rx="3" fill="#e2e8f0" opacity="0.5"/>
    
    <!-- Paper body -->
    <rect x="-20" y="-12" width="40" height="24" rx="2" fill="white" stroke="#4a5568" stroke-width="1.5"/>
    
    <!-- Paper lines -->
    <g stroke="#cbd5e0" stroke-width="1.5" opacity="0.6">
      <line x1="-16" y1="-6" x2="16" y2="-6"/>
      <line x1="-16" y1="-2" x2="16" y2="-2"/>
      <line x1="-16" y1="2" x2="12" y2="2"/>
      <line x1="-16" y1="6" x2="10" y2="6"/>
    </g>
    
    <!-- Paper corner fold -->
    <path d="M 12 -12 L 20 -4 L 12 4 Z" fill="#f7fafc" stroke="#e2e8f0" stroke-width="1"/>
    
    <!-- Pencil with modern design -->
    <g transform="rotate(-35) translate(15, -15)">
      <!-- Pencil body -->
      <rect x="0" y="0" width="5" height="16" rx="1" fill="#f39c12" stroke="#e67e22" stroke-width="0.5"/>
      
      <!-- Pencil tip -->
      <polygon points="0,16 2.5,20 5,16" fill="#2c3e50"/>
      
      <!-- Pencil highlight -->
      <rect x="1" y="2" width="1" height="12" fill="#fff" opacity="0.3"/>
    </g>
  </g>

  <!-- Additional decorative elements -->
  <g opacity="0.4">
    <!-- Small floating dots -->
    <circle cx="25" cy="35" r="2" fill="#667eea"/>
    <circle cx="103" cy="35" r="2" fill="#764ba2"/>
    <circle cx="35" cy="95" r="2" fill="#667eea"/>
    <circle cx="93" cy="95" r="2" fill="#764ba2"/>
  </g>
</svg>
